<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sakuraiandco.com.gtcollab">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the tempUser's emails -->
    <!-- <uses-permission android:name="android.permission.GET_ACCOUNTS" /> -->
    <!-- <uses-permission android:name="android.permission.READ_PROFILE" /> -->
    <!-- <uses-permission android:name="android.permission.READ_CONTACTS" /> -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".temp.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".temp.CoursePageActivity"
            android:label="@string/title_activity_course_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".temp.AddMeetingActivity"
            android:label="@string/title_activity_add_meeting"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- TEMP -->

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name=".SearchResultsActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <activity
            android:name=".CourseListActivity"
            android:label="@string/title_activity_course_list"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SubjectSearchActivity"
            android:label="@string/title_activity_subject_search"
            android:launchMode="singleTop"
            android:parentActivityName=".CourseListActivity">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity" />
        </activity>

        <activity
            android:name=".CourseSearchActivity"
            android:label="@string/title_activity_course_search"
            android:launchMode="singleTop"
            android:parentActivityName=".SubjectSearchActivity">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity" />
        </activity>

        <activity
            android:name=".CourseActivity"
            android:label="@string/title_activity_course"
            android:launchMode="singleTop"
            android:parentActivityName=".CourseListActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".UserListActivity"
            android:label="@string/title_activity_user_list"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name=".CreateMeetingActivity"
            android:label="@string/title_activity_create_meeting"
            android:launchMode="singleTop"
            android:parentActivityName=".CourseActivity">
        </activity>

        <activity
            android:name=".CreateGroupActivity"
            android:label="@string/title_activity_create_group"
            android:launchMode="singleTop"
            android:parentActivityName=".CourseActivity">
        </activity>

        <activity
            android:name=".UserSelectActivity"
            android:label="@string/title_activity_user_select"
            android:launchMode="singleTop"
            android:parentActivityName=".CreateGroupActivity">
        </activity>

        <service
            android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <service android:name="sakuraiandco.com.gtcollab.utils.NotificationUtils$NotificationActionService" />

    </application>

</manifest>