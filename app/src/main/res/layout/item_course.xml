<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_course_short_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/item_padding"
                android:paddingLeft="@dimen/item_padding"
                android:paddingRight="@dimen/item_padding"
                android:paddingBottom="@dimen/item_padding_inner"
                android:text="CS 1332"
                android:textSize="@dimen/item_text_size_large" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/item_padding_inner"
            android:paddingLeft="@dimen/item_padding"
            android:paddingRight="@dimen/item_padding"
            android:paddingBottom="@dimen/item_padding">

            <TextView
                android:id="@+id/text_course_long_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Algorithms and Data Structures"
                android:textSize="@dimen/item_text_size_default" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/item_padding_inner"
                android:gravity="center_vertical"
                app:srcCompat="@drawable/ic_person_black_24dp" />

            <TextView
                android:id="@+id/text_course_num_members"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="32"
                android:textSize="@dimen/item_text_size_default" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="16dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_grey_24dp" />

</LinearLayout>