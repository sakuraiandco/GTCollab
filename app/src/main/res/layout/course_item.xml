<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/class_member_count"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/join_class_button"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="Button"
        app:layout_constraintBaseline_toBaselineOf="@+id/class_member_count"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/class_member_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintRight_toLeftOf="@+id/join_class_button"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/contact_name"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintVertical_bias="0.527" />
</android.support.constraint.ConstraintLayout>